{
    "compilerOptions": {
        "strict": true,
        
        "incremental": true,
        "downlevelIteration": true,
        "target": "es2021",

        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
    },
    "include": [
        "src/**/*", 
        "test/*.test.ts"    
    ],
}