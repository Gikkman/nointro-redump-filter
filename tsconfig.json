{
    "compilerOptions": {
        "strict": true,
        
        "incremental": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
    },
    "include": [
        "./src/**/*"
    ]
}